<!DOCTYPE html>
<html>
<head>
    <title>Mein Spiel</title>
</head>
<body>
    <h1>Willkommen zu meinem Spiel!</h1>
    <p>Drücke den Startknopf, um das Spiel zu beginnen.</p>
    <button onclick="startGame()">Start</button>

    <script>
        // Variablen für das Spiel
        let score = 0;
        let time = 60;
        let gameInterval;

        // Funktion, um das Spiel zu starten
        function startGame() {
            // Starte das Spiel nur, wenn es nicht bereits läuft
            if (!gameInterval) {
                gameInterval = setInterval(updateGame, 1000); // Starte das Spiel-Update-Intervall
            }
        }

        // Funktion, um das Spiel zu aktualisieren
        function updateGame() {
            updateTime();
            // Fügen Sie hier Ihre Spiellogik hinzu
            console.log("Spiel aktualisiert! Verbleibende Zeit: " + time + ", Punktzahl: " + score);
        }

        // Funktion, um den Score zu erhöhen
        function increaseScore() {
            score++;
        }

        // Funktion, um die verbleibende Zeit zu aktualisieren
        function updateTime() {
            time--;
            if (time <= 0) {
                endGame();
            }
        }

        // Funktion, um das Spiel zu beenden
        function endGame() {
            clearInterval(gameInterval); // Stoppt das Spiel-Update-Intervall
            gameInterval = null; // Setzt das Spiel-Intervall zurück
            console.log("Spiel beendet! Endpunktzahl: " + score);
        }
    </script>
</body>
</html>
